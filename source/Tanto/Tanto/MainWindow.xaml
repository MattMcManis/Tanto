                Click="btnWebsite_Click" 
                Height="22" 
                VerticalAlignment="Bottom" 
                Background="White"
                Cursor="Hand"
                ToolTipService.InitialShowDelay="500" 
                ToolTip="Website" >
            <TextBlock Text="&#127758;"
                       FontSize="12"
                       Margin="0,-2,0,0" 
                       Foreground="#FF939393"/>
