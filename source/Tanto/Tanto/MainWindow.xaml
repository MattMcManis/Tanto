        </Button>

        <!-- Settings -->
        <Button x:Name="btnSettings" 
                HorizontalAlignment="Left" 
                Margin="91,0,0,14"
                Width="22" 
                Click="btnSettings_Click" 
                Height="22" 
                VerticalAlignment="Bottom" 
                Background="White"
                Cursor="Hand"
                ToolTipService.InitialShowDelay="500" 
                ToolTip="Reset Saved Settings" >
            <TextBlock Text="&#9881;"
                       FontSize="12"
                       Margin="0,-2,0,0"
                       Foreground="#FF939393"/>
        </Button>

        <!-- Progress Info -->
        <Label x:Name="lblProgressInfo" 
               Content=""
               Height="26"
               Margin="0,0,90,12" 
               VerticalAlignment="Bottom"
               HorizontalAlignment="Right"
               Width="70"/>

        <!-- Rename -->
        <Button x:Name="btnPreview" 
                Content="Preview"
                HorizontalAlignment="Right"
                Margin="0,0,10,14" 
                VerticalAlignment="Bottom" 
                Width="75" 
                Height="22"
                Click="btnPreview_Click" 
                Background="White"
                Cursor="Hand" />

    </Grid>
</Window>
